<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | Tabicolle</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="logo">
        <%= link_to "Tabicolle", root_path %>
      </div>
      <ul>
        <li><%= link_to "新規登録", "#" %></li>
        <li><%= link_to "ログイン", "#" %></li>
      </ul>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer>
      <ul>
        <li><%= link_to "このアプリについて", about_path %></li>
        <li><%= link_to "利用規約", '#' %></li>
      </ul>
    </footer>
  </body>
</html>
