<% provide(:title, "投稿編集") %>

<div class="posts">
  <div class="new row">
    <h2>投稿編集</h2>

    <!-- レイアウトの余白の都合上で col-md-2 を配置 [todo]あとからなにか加える可能性がある｡ -->
    <div class="col-md-2">
    </div>

    <div class="form_wrap col-md-8">
      <%= form_for(@post, url: post_path(@post))  do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="field">
          <%= f.label :name, "投稿内容" %><br />
          <%= f.text_area :content %>
        </div>
        <div class="actions">
          <%= f.submit "投稿", class: "btn" %>
        </div>
      <% end %>
    </div>

    <%= render 'shared/sidebar' %>

  </div>
</div>
