
<div class="post">
  <div class="icon_wrap">
    <div class="icon">
      <%= link_to gravatar_for(post.user), post.user %>
    </div>
    <div class="name">
      <%= link_to post.user.name, post.user %>
    </div>
  </div>
  <div class="content">
    <%= link_to post.content, "/posts/#{post.id}" %>
  </div>
  <div class="updated_at">
    <%= post.updated_at.to_s(:datetime_jp) %>
  </div>
</div>
