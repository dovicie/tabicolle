投稿のID: <%= @post.id %>

<% provide(:title,  @post.user.name + "さんの投稿" ) %>

<div class="posts">
  <div class="show row">

    <!-- レイアウトの余白の都合上で col-md-3 を配置 [todo]あとからなにか加える可能性がある｡ -->
    <div class="col-md-3">
    </div>

    <div class="post_wrap col-md-7">
      <div class="post">
        <div class="icon_wrap">
          <div class="icon">
            <%= gravatar_for @post.user %>
          </div>
          <div class="name">
            <%= @post.user.name %>
          </div>
        </div>
        <div class="content">
          <%= @post.content %>
        </div>
        <div class="updated_at">
          <%= @post.updated_at.to_s(:datetime_jp) %>
        </div>
      </div>
    </div>

    <%= render 'shared/sidebar' %>

  </div>
</div>
